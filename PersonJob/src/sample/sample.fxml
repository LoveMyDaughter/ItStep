<GridPane alignment="center" hgap="10" vgap="10" xmlns="http://javafx.com/javafx/null" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.Controller">
    <columnConstraints>
        <ColumnConstraints maxWidth="0.0" minWidth="0.0" prefWidth="0.0" />
        <ColumnConstraints maxWidth="52.0" minWidth="52.0" prefWidth="52.0" />
        <ColumnConstraints />
    </columnConstraints>
    <rowConstraints>
        <RowConstraints />
        <RowConstraints />
        <RowConstraints />
    </rowConstraints>
    <children>
        <TextField fx:id="textField1" GridPane.columnIndex="2" GridPane.rowIndex="1" />
        <ListView fx:id="listView1" GridPane.columnIndex="2" GridPane.rowIndex="2" />
      <GridPane GridPane.columnIndex="1" GridPane.rowIndex="2">
        <columnConstraints>
          <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
            <ColumnConstraints />
        </columnConstraints>
        <rowConstraints>
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        </rowConstraints>
         <children>
              <Button fx:id="btn1" defaultButton="true" mnemonicParsing="false" onAction="#btn1Click" prefHeight="25.0" prefWidth="99.0" text="Add" textAlignment="CENTER" />
              <Button fx:id="btnRemove" minWidth="-Infinity" mnemonicParsing="false" onAction="#btnRemoveClick" text="Remove" GridPane.columnSpan="2" GridPane.rowIndex="2" />
              <Button fx:id="btnShow" onAction="#btnShow" mnemonicParsing="false" text="Reload" GridPane.columnSpan="1" GridPane.rowIndex="1" />
         </children>
      </GridPane>
    </children>
